<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPurple200</item>
        <item name="colorPrimaryVariant">@color/colorPurple700</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorTeal200</item>
        <item name="colorSecondaryVariant">@color/colorTeal200</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="colorInfo">@color/colorBlack</item>
        <item name="colorWarning">@color/colorDarkYellow</item>
        <item name="colorError">@color/colorRed</item>
        <!-- Customize your theme here. -->
    </style>
</resources>